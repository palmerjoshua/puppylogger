<!-- CSV Import/Export Modal -->
<div
  id="csv-modal"
  class="fixed inset-0 hidden flex items-center justify-center modal z-50"
  role="dialog"
  aria-labelledby="csv-modal-title"
>
  <div
    class="bg-white p-6 rounded-lg shadow-lg w-11/12 max-w-md text-center"
  >
    <h2 id="csv-modal-title" class="text-xl font-bold mb-4">
      Import / Export CSV
    </h2>
    <button
      id="csv-export-btn"
      class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-4"
      data-ga-event="csv_export"
    >
      Export CSV
    </button>
    <div class="mb-4">
      <label for="csv-import-input" class="block mb-1 font-semibold">
        Import CSV:
      </label>
      <input
        type="file"
        id="csv-import-input"
        accept=".csv"
        class="w-full border rounded px-2 py-1"
        data-ga-event="csv_import"
      />
    </div>
    <button
      id="csv-modal-close"
      class="bg-gray-300 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded"
      data-ga-event="import_export_close"
    >
      Close
    </button>
  </div>
</div>

<!-- EXPORT-FIRST CONFIRMATION MODAL -->
<div
  id="exportConfirmModal"
  role="dialog"
  aria-modal="true"
  aria-labelledby="export-confirm-title"
  class="fixed inset-0 hidden items-center justify-center modal z-50"
>
  <div
    class="bg-white p-6 rounded-lg shadow-lg w-11/12 max-w-md text-center"
  >
    <h2 id="export-confirm-title" class="text-xl font-bold mb-4">
      Export before clearing?
    </h2>
    <p class="text-sm mb-6">
      Would you like to export your logs before clearing all entries?
    </p>
    <div class="flex justify-center space-x-4">
      <button
        id="export-first-yes"
        type="button"
        class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
      >
        Yes, export
      </button>
      <button
        id="export-first-no"
        type="button"
        class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
      >
        No, clear
      </button>
    </div>
  </div>
</div>

<!-- Clear Confirmation Modal -->
<div
  id="clearConfirmModal"
  role="dialog"
  aria-modal="true"
  aria-labelledby="confirm-title"
  class="fixed inset-0 hidden items-center justify-center modal z-50"
>
  <div
    class="bg-white p-6 rounded-lg shadow-lg w-11/12 max-w-md text-center"
  >
    <h2 id="confirm-title" class="text-xl font-bold mb-4">Are you sure?</h2>
    <p class="text-sm mb-6">
      This will delete all your logged puppy activities. This cannot be
      undone.
    </p>
    <div class="flex justify-center space-x-4">
      <button
        type="button"
        onclick="confirmClearLog()"
        class="bg-red-700 hover:bg-red-800 text-white font-bold py-2 px-4 rounded"
        data-ga-event="clear_entries_yes"
      >
        Yes, Clear
      </button>
      <button
        type="button"
        onclick="closeClearConfirm()"
        class="bg-gray-300 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded"
        data-ga-event="clear_entries_no"
      >
        Cancel
      </button>
    </div>
  </div>
</div>